  "description": "Integrates MyAnimeList/AniList/Kitsu/Simkl into various sites, with auto episode tracking.",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/jquery": "^3.5.1",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
